{
  "name": "sea-battle-game",
  "version": "1.0.0",
  "description": "Console-based Sea Battle game with intelligent CPU opponent",
  "main": "seabattle.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node seabattle.js"
  },
  "keywords": ["battleship", "console-game", "ai", "strategy"],
  "author": "Sea Battle Development Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
} 